<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/site.css">


    <!--Enabling the use of HTML5 in legacy Internet Explorer-->
    <!--[if lt IE 9]>
      <script src="~/js/html5shiv.js"></script>
    <![endif]-->

    <!--Used in views to refer their own CSS-->
    @RenderSection("Styles", false)
</head>
<body>
    
    <section class="container-fluid">
        <header class="clearfix">
            <section class="jumbotron">
                <div class="row">
                    <div class="col-2">
                        <figure class="text-center">
                            <img src="~/images/chat.jpg" class="figure-img img-fluid img-header" />
                        </figure>
                    </div>
                    <div class="col-10">
                        <blockquote class="blockquote">
                            <h1 class="font-weight-bold">Looking for friends?</h1>
                            <p class="pl-5 font-weight-light">
                                It's the way you find awesome people around the world.
                                <br />Let's talk now!!
                            </p>
                        </blockquote>
                    </div>
                </div>
            </section>
        </header>
        <article>
            @RenderBody()
        </article>
    </section>

    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

    <!--Used in views to refer their own Scripts-->
    @RenderSection("Scripts", false)
</body>    
</html>